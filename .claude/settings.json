{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(**/*)",
      "Edit(**/*)",
      "Write(**/*)",
      "Glob(**/*)",
      "Grep(*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(node --version:*)",
      "Bash(npm --version:*)",
      "Bash(uname:*)",
      "Bash(whoami:*)",
      "WebFetch(*)",
      "Bash(npm list:*)",
      "Bash(npm outdated:*)",
      "Bash(npm view:*)",
      "Read(package.json)",
      "Read(package-lock.json)",
      "Read(tsconfig.json)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git branch --show-current:*)",
      "Bash(git tag:*)",
      "Bash(git remote:*)",
      "Bash(git add:*)",
      "Bash(git commit -m:*)",
      "Bash(git stash:*)",
      "Bash(git stash push:*)",
      "Bash(git stash pop:*)",
      "Bash(git stash list:*)"
    ],
    "ask": [
      "Bash(npm install:*)",
      "Bash(npm ci:*)",
      "Bash(yarn install:*)",
      "Bash(pnpm install:*)",
      "Bash(bun install:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(npm run build:*)",
      "Bash(npm run test:*)",
      "Bash(git reset:*)",
      "Bash(git clean:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git branch -D:*)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/.env*)",
      "Read(secrets/**)",
      "Read(credentials.*)",
      "Edit(.env*)",
      "Write(.env*)",
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)",
      "Bash(git clean -fdx:*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"/Users/cojac/.claude/hooks/git-safety-check.sh\" \"$CLAUDE_TOOL_ARGS\"",
            "timeout": 5,
            "continueOnError": false
          }
        ]
      }
    ]
  }
}
