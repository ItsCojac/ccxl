{
  "name": "ccxl",
  "version": "1.0.0",
  "description": "ccxl (Claude Code XL) - Intelligent Claude Code setup for any project",
  "main": "lib/index.js",
  "bin": {
    "ccxl": "./bin/cli.js"
  },
  "scripts": {
    "setup": "node bin/cli.js",
    "dev": "node bin/cli.js --dev",
    "test": "node tests/run-all-tests.js --fast",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration --testTimeout=30000",
    "test:manual": "node tests/manual/test-matrix.js",
    "test:real-world": "node tests/manual/real-world-test.js",
    "test:all": "node tests/run-all-tests.js",
    "test:safety": "node -e \"require('./tests/run-all-tests.js').TestRunner().runSafetyAudit()\""
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "fs-extra": "^11.3.1",
    "inquirer": "^8.2.6",
    "jsdom": "^26.1.0",
    "markdown-it": "^14.1.0",
    "ora": "^5.4.1",
    "puppeteer": "^24.15.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "files": [
    "bin/",
    "lib/",
    "adapters/",
    "templates/",
    ".claude/"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "documentation",
    "setup",
    "development",
    "npx",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itscojac/claude-setup.git"
  },
  "bugs": {
    "url": "https://github.com/itscojac/claude-setup/issues"
  },
  "homepage": "https://github.com/itscojac/claude-setup#readme",
  "author": "ItsCojac",
  "license": "MIT"
}
